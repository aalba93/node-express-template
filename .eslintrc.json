{
  "extends": ["airbnb", "prettier", "plugin:node/recommended-module"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "node/no-unpublished-require": "off",
    "node/no-unpublished-import": [
      "error",
      {
        "allowModules": ["supertest"]
      }
    ]
  }
}
